extends base.pug

block scripts
    script(src="/static/index.js")

block style
    style
        include ../static/style.css
        include ../static/styleContact.css

block content
    div.container
        h1 Contact us
        form(action="/contact", method="post" ,  class = "userForm")
            input(type="text", class="userInput", name="userName", placeholder="Enter your name")
            input(type="phone", class="userInput", name="userPhone", placeholder="Enter your phone")
            input(type="email", class="userInput", name="userEmail", placeholder="Enter your email")
            input(type="text", class="userInput", name="userAddress", placeholder="Enter your address")
            input(type="text", class="userInput", name="userDescription", placeholder="Enter your concern")
            button(class="btn")
                | Submit